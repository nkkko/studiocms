---
type Props = {
	label: string;
	type: 'text' | 'password' | 'email';
	id: string;
};

const { label, type, id } = Astro.props;
---

<label for={`input-${id}`} class="input-label">
  <span class="label">{label}</span>
  <input name={`input-${id}`} id={`input-${id}`} type={type} class="input" />
</label>
<style>
  .input-label {
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: .25rem;
  }

  .label {
    font-size: 14px;
  }

  .input {
    padding: .65rem 1rem;
    border-radius: 8px;
    border: 1px solid var(--border);
    background: var(--background-step-2);
    color: var(--text);
  }

  .input:active, .input:focus {
    border: 1px solid var(--primary);
    outline: none;
  }
</style>